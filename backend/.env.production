# Production Environment Configuration for mysol360.com
APP_NAME="HRM-ERP Production"
APP_ENV=production
APP_KEY=base64:your-production-app-key-here
APP_DEBUG=false
APP_URL=https://mysol360.com

LOG_CHANNEL=stack
LOG_LEVEL=error

# Production Database (Existing MySQL)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=mysol360_hrm_erp
DB_USERNAME=mysol360_hrm_user
DB_PASSWORD=your-secure-database-password

# Production Cache (File-based)
CACHE_DRIVER=file
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Production CORS & Sanctum
SANCTUM_STATEFUL_DOMAINS=mysol360.com,www.mysol360.com
FRONTEND_URL=https://mysol360.com

# Production Mail (Real SMTP)
MAIL_MAILER=smtp
MAIL_HOST=mail.mysol360.com
MAIL_PORT=587
MAIL_USERNAME=noreply@mysol360.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@mysol360.com"
MAIL_FROM_NAME="${APP_NAME}"

# Production FIRS (Live)
FIRS_SANDBOX=false
FIRS_DEBUG=false
FIRS_API_TIMEOUT=10