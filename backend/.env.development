# Development Environment Configuration
APP_NAME="HRM-ERP Development"
APP_ENV=local
APP_KEY=base64:your-app-key-here
APP_DEBUG=true
APP_URL=http://localhost:8001

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Development Database (Docker MySQL)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=hrm_database_dev
DB_USERNAME=hrm_user
DB_PASSWORD=hrm_password

# Development Cache (Docker Redis)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
REDIS_HOST=redis
REDIS_PORT=6379

# Development CORS & Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000,192.168.1.118:3000
FRONTEND_URL=http://localhost:3000

# Development Mail (Mailhog)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="dev@hrm-erp.local"
MAIL_FROM_NAME="${APP_NAME}"

# Development FIRS (Sandbox)
FIRS_SANDBOX=true
FIRS_DEBUG=true
FIRS_API_TIMEOUT=30